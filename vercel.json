{
  "version": 2,
  "builds": [
    {
      "src": "apps/backend/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/schema.prisma"]
      }
    },
    {
      "src": "apps/frontend/next.config.ts",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/backend/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend"
    }
  ]
}
